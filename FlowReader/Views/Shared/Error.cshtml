@model FlowReader.Models.ApiResult

@{
    ViewData["Title"] = "Error";
    var errorCode = Model?.ErrorCode ?? 500;
    var errorName = Model?.ErrorName ?? "Unknown Error";
    var errors = Model?.Errors ?? new List<string> { "An unexpected error occurred." };
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title">An Error Occurred</h4>
                </div>
                <div class="card-body">
                    <h5>Error: @errorName (@errorCode)</h5>
                    <ul class="list-group">
                        @foreach (var error in errors)
                        {
                            <li class="list-group-item list-group-item-danger">@error</li>
                        }
                    </ul>
                </div>
                <div class="card-footer">
                    <a href="/" class="btn btn-primary">Go to Home</a>
                    <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
